<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:scrollbarSize="0dp"
        android:scrollbarThumbVertical="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_15sdp">

            <!--<ImageView-->
            <!--android:id="@+id/iv_close"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginEnd="0dp"-->
            <!--android:padding="10dp"-->
            <!--android:src="@drawable/ic_close_black_24dp"-->
            <!--android:tint="@color/pink_color" />-->
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="right"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_close_black_24dp"
                android:tint="@color/pink_color" />

            <TextView
                android:text="Type"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/rl_vaccines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_background_layout"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <Spinner
                android:id="@+id/sp_vaccines"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_5sdp"
                android:entries="@array/type"
                android:background="@null"
                android:popupElevation="0dp"
                android:spinnerMode="dropdown" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_hc"
                android:text="Child name/mother name"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_childName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_background_layout"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_hw"
                android:text="Date of birth"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edittext_background_layout"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_calender"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:text="Mother name/husband name"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_fatherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_background_layout"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:text="Father CNIC"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_fatherCNIC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:inputType="number"
                android:maxLength="11"
                android:background="@drawable/edittext_background_layout"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:text="Contact"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:inputType="number"
                android:maxLength="11"
                android:background="@drawable/edittext_background_layout"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:text="Date"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_dateofvaccine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edittext_background_layout"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_calender"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <Button
                    android:id="@+id/btn_vaccine_prepare"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/login_button_shape_layout"
                    android:text="Prepare"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>